        "# import init\n",
        "# import prog\n",
        "\n",
        "if __name__ == '__main__':\n",
        "    point1 = (-3, 2, 5)\n",
        "    point2 = (-1, 7, -4)\n",
        "\n",
        "    shortest_distance = calculate_distance(point1, point2)\n",
        "\n",
        "    print(f\"The shortest distance between {point1} and {point2} is: {shortest_distance}\")\n",
        "\n",
