        "\n",
        "# init.py\n",
        "import math\n",
        "\n",
        "def calculate_distance(point1, point2):\n",
        "    \"\"\"\n",
        "    Calculate the shortest distance between two points in 3D space.\n",
        "\n",
        "    Args:\n",
        "        point1 (tuple): A tuple containing (x, y, z) coordinates of the first point.\n",
        "        point2 (tuple): A tuple containing (x, y, z) coordinates of the second point.\n",
        "\n",
        "    Returns:\n",
        "        float: The shortest distance between the two points.\n",
        "    \"\"\"\n",
        "    x1, y1, z1 = point1\n",
        "    x2, y2, z2 = point2\n",
        "\n",
        "    distance = math.sqrt((x2 - x1)**2 + (y2 - y1)**2 + (z2 - z1)**2)\n",
        "    return distance\n",
        "\n"
      ],
      "metadata": {
        "id": "5WBCUb2eFaXg"
      },
      "execution_count": null,
      "outputs": []
    },
